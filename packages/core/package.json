{
  "name": "@ats-resume/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "templates"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./templates/*": "./templates/*"
  },
  "scripts": {
    "build:core": "pnpm --filter @ats-resume/core build",
    "dev": "pnpm build:core && pnpm --filter @ats-resume/web dev"
  },
  "dependencies": {
    "@sparticuz/chromium": "^123.0.1",
    "playwright-core": "^1.58.2"
  }
}
